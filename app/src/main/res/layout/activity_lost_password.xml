<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.lsy.wisdombuid.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/thirty"
        android:layout_marginTop="50dp"
        android:layout_marginRight="@dimen/thirty"
        android:background="@drawable/input_bg_white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:src="@mipmap/phone_icon" />

        <EditText
            android:id="@+id/lost_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:textColor="@color/three"
            android:textColorHint="@color/nine_text"
            android:textSize="15sp" />

    </LinearLayout>

    <TextView
        style="@style/fenge"
        android:layout_marginLeft="@dimen/thirty"
        android:layout_marginTop="@dimen/five"
        android:layout_marginRight="@dimen/thirty" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/thirty"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginRight="@dimen/thirty"
        android:background="@drawable/input_bg_white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:src="@mipmap/login_code" />

        <EditText
            android:id="@+id/lost_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入验证码"
            android:inputType="phone"
            android:maxLength="6"
            android:textColor="@color/three"
            android:textColorHint="@color/nine_text"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/lost_get_code"
            android:layout_width="95dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:onClick="sendCode"
            android:text="获取验证码"
            android:textColor="@color/btn_bule"
            android:textSize="10sp" />

    </LinearLayout>

    <TextView
        style="@style/fenge"
        android:layout_marginLeft="@dimen/thirty"
        android:layout_marginTop="@dimen/five"
        android:layout_marginRight="@dimen/thirty" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/thirty"
        android:layout_marginTop="@dimen/ten"
        android:layout_marginRight="@dimen/thirty"
        android:background="@drawable/input_bg_white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:src="@mipmap/pass_icon" />

        <EditText
            android:id="@+id/lost_new_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:textColor="@color/three"
            android:textColorHint="@color/nine_text"
            android:textSize="15sp" />

    </LinearLayout>


    <TextView
        style="@style/fenge"
        android:layout_marginLeft="@dimen/thirty"
        android:layout_marginTop="@dimen/five"
        android:layout_marginRight="@dimen/thirty" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="56.5dp"
        android:layout_marginTop="46dp"
        android:layout_marginRight="56.5dp"
        android:background="@drawable/input_bg_blue"
        android:onClick="lostUpdate"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="15sp" />


</LinearLayout>
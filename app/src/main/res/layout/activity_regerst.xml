<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/login_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_72"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="45sp" />

    <TextView
        android:id="@+id/login_wisdom_sit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_app_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_6_half"
        android:letterSpacing="0.5"
        android:text="Wisdom site"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_19_half"
        android:paddingRight="@dimen/dp_19_half">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_56_half"
            android:layout_marginRight="@dimen/dp_56_half"
            android:background="@drawable/input_bg_white"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_7"
                android:src="@mipmap/phone_icon" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_7"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入手机号"
                android:textColor="@color/nine_text"
                android:textSize="15sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_56_half"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_56_half"
            android:background="@drawable/input_bg_white"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_7"
                android:src="@mipmap/phone_icon" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_7"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入验证码"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/regist_get_code"
                android:layout_width="@dimen/dp_75"
                android:layout_height="match_parent"
                android:background="@drawable/input_bg_blue"
                android:gravity="center"
                android:onClick="sendCode"
                android:text="验证码"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_56_half"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_56_half"
            android:background="@drawable/input_bg_white"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_7"
                android:src="@mipmap/pass_icon" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输密码"
                android:textColor="@color/nine_text"
                android:textSize="15sp" />

        </LinearLayout>


        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:layout_marginLeft="@dimen/dp_56_half"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_56_half"
            android:background="@drawable/input_bg_blue"
            android:onClick="regerst"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="15sp" />


    </LinearLayout>

</RelativeLayout>
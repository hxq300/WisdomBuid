<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_72"
        android:background="@color/btn_bule"
        android:paddingTop="@dimen/dp_36">

        <ImageView
            android:layout_width="@dimen/dp_31"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp_6"
            android:onClick="back"
            android:padding="@dimen/dp_10"
            android:src="@mipmap/back_icon" />

        <TextView
            android:id="@+id/text_center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="进度管理"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/process_spopu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:gravity="center"
            android:onClick="showPopu"
            android:paddingRight="@dimen/dp_10"
            android:src="@mipmap/more_icon"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="visible" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@color/bg_dc"
        android:gravity="center"
        android:text="苏州S1线土建05标"
        android:textColor="@color/tv_blue"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/pay_bg_hui"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_12"
        android:paddingTop="@dimen/dp_7"
        android:paddingRight="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:gravity="center"
            android:text="当日进度"
            android:textColor="#ff3d91d0"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="成孔50m"
                android:textColor="@color/three"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="桩基检测2个"
                android:textColor="@color/three"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="钢筋制安50m"
                android:textColor="@color/three"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="灌浇量2个"
                android:textColor="@color/three"
                android:textSize="14sp" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.lsy.wisdombuid.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_section_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@color/bg_dc"
                android:gravity="center"
                android:text=""
                android:textColor="@color/tv_blue"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/safety_line_zhandian"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@color/light_green"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/safety_zhandian_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/xiala_blue"
                    android:drawablePadding="@dimen/seven"
                    android:text=""
                    android:textColor="@color/tv_blue"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten"
                android:background="@color/light_green"
                android:orientation="vertical"
                android:paddingBottom="@dimen/margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/light_green"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/btn_circular">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="@dimen/twelve"
                        android:layout_weight="1"
                        android:background="@drawable/text_blue_line"
                        android:orientation="horizontal"
                        android:padding="2dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/btn_bule"
                            android:gravity="center"
                            android:padding="@dimen/five"
                            android:text="隐患数量"
                            android:textColor="@color/white"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/safety_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/text_white_cricle"
                            android:gravity="center"
                            android:padding="@dimen/five"
                            android:text=""
                            android:textColor="@color/btn_bule"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/twelve"
                        android:layout_marginRight="25dp"
                        android:layout_weight="1"
                        android:background="@drawable/text_blue_line"
                        android:orientation="horizontal"
                        android:padding="2dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/btn_bule"
                            android:gravity="center"
                            android:padding="@dimen/five"
                            android:text="整改率"
                            android:textColor="@color/white"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/safety_zhenggailv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/text_white_cricle"
                            android:gravity="center"
                            android:padding="@dimen/five"
                            android:text=""
                            android:textColor="@color/btn_bule"
                            android:textSize="13sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/safety_yizhenggai"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@mipmap/safety_wancheng"
                            android:drawablePadding="@dimen/four"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/tv_blue"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="已整改"
                            android:textColor="@color/three"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/safety_weizhenggai"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@mipmap/safety_wancheng"
                            android:drawablePadding="@dimen/four"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/tv_blue"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="待整改"
                            android:textColor="@color/three"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/safety_caoqi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@mipmap/safety_wancheng"
                            android:drawablePadding="@dimen/four"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/tv_blue"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="超期未整改"
                            android:textColor="@color/three"
                            android:textSize="13sp" />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten"
                android:background="@color/light_green"
                android:orientation="horizontal"
                android:padding="@dimen/twelve">


                <TextView
                    android:id="@+id/safety_jianchajilu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/safety_jianchajilu"
                    android:drawablePadding="@dimen/ten"
                    android:gravity="center"
                    android:onClick="safetyManagent"
                    android:text="检查记录"
                    android:textColor="#EBCA45"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/safety_wuxiaoshuju"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/safety_wuxiaojilu"
                    android:drawablePadding="@dimen/ten"
                    android:gravity="center"
                    android:onClick="safetyManagent"
                    android:text="无效数据"
                    android:textColor="#ffed5e5e"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/safety_daizhenggai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/safety_daizhenggai"
                    android:drawablePadding="@dimen/ten"
                    android:gravity="center"
                    android:onClick="safetyManagent"
                    android:text="待整改"
                    android:textColor="#42C667"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/safety_zhenggaireviw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/safety_zhenggaifucha"
                    android:drawablePadding="@dimen/ten"
                    android:gravity="center"
                    android:onClick="safetyManagent"
                    android:text="整改复查"
                    android:textColor="#944EE3"
                    android:textSize="12sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_green"
                android:orientation="horizontal"
                android:padding="@dimen/twelve">

                <Button
                    android:id="@+id/safety_yinhuan_fenxi"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:layout_marginRight="@dimen/eight"
                    android:layout_weight="1"
                    android:background="@drawable/input_bg_blue"
                    android:onClick="safetyManagent"
                    android:text="分包单位隐患分析"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/safety_danger_type"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:layout_marginLeft="@dimen/eight"
                    android:layout_weight="1"
                    android:background="@drawable/input_bg_blue"
                    android:onClick="safetyManagent"
                    android:text="隐患类型分析"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten"
                android:background="@color/light_green"
                android:orientation="vertical"
                android:paddingBottom="@dimen/btn_circular">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/safety_mouth_fenxi"
                    android:drawablePadding="@dimen/five"
                    android:padding="@dimen/ten"
                    android:text="最近一个月隐患分析"
                    android:textColor="@color/three"
                    android:textSize="14sp" />

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/chart"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_margin="@dimen/btn_circular" />

            </LinearLayout>



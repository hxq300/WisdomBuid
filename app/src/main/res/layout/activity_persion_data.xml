        android:background="@drawable/mine_top_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:paddingTop="36dp">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:onClick="back"
                android:paddingLeft="@dimen/margin"
                android:paddingRight="10dp"
                android:paddingBottom="14dp"
                android:src="@mipmap/back_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/personal_data"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_reight"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="gone" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/persion_head_img"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="21dp"
                android:layout_marginBottom="21dp"
                android:onClick="headImage"
                android:src="@mipmap/mine_head" />

            <EditText
                android:id="@+id/persion_input_nickname"
                style="@style/inputLine"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawablePadding="5dp"
                android:hint="请输入您的昵称"
                android:padding="@dimen/twelve"
                android:textColor="@color/white"
                android:textColorHint="@color/f_nine"
                android:textSize="16sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/persion_text_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawableRight="@mipmap/edit_white"
                android:drawablePadding="5dp"
                android:onClick="editNickname"
                android:padding="@dimen/twelve"
                android:text="轮回少年"
                android:textColor="@color/white"
                android:textSize="22sp" />


        </LinearLayout>

